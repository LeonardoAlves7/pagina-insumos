@model pagina_insumos.Models.Gasto

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar gasto</h1>

<h3>Tem certeza que deseja apagar esse gasto?</h3>
<div>
    <h4>Gasto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Insumo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Insumo.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </form>
